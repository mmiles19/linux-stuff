#!/bin/bash

###########
# OPTIONS #
###########

export ROS_ROBOT=g00
export ROS_HOSTNAME=g00-0

#########
# SETUP #
#########

getIpFromHost(){
local host=$1	
local ip=$(getent hosts $host| grep -o "^[^ ]*")
echo "$ip"
}
#echo "$(getIpFromHost g00_0)"

# setup ROS networking
export ROS_IP=$(getIpFromHost $ROS_HOSTNAME)
export ROS_MASTER_URI=http://$(getIpFromHost "$ROS_ROBOT-0"):11311

# setup multimaster
export MCAST_GROUP=224.0.0.1
sudo sh -c "echo 0 >/proc/sys/net/ipv4/icmp_echo_ignore_broadcasts"
sudo service procps restart



